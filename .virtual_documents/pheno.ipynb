def parse_value(v):
    v_parts = v.split(' ')
    central = float(v_parts[0])
    exponent = int(v_parts[-1][-1])
    unc = []
    for p in v_parts[1:-1]:
        if p != 'Â±':
            unc.append(float(p))
    unc_tot = sum(u**2 for u in unc)**0.5
    return (central*10**(-exponent), unc_tot*10**(-exponent))


